<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/layout_custom_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Angle out of range"
        android:textColor="@color/header_background"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/layout_custom_alert_underline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/layout_custom_alert_title"
        android:layout_marginTop="2.5dp"
        android:background="@color/header_background" />

    <ImageView
        android:id="@+id/layout_custom_alert_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/layout_custom_alert_underline"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_tilt_phone_alert_android_new" />

    <TextView
        android:id="@+id/layout_custom_alert_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_custom_alert_icon"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="Angle out of range. Please tilt your phone until it is at an angle between 45° and 0°."
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/layout_custom_alert_ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_custom_alert_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_box_blue_no_border"
        android:text="OK"
        android:textColor="@color/white" />
</RelativeLayout>