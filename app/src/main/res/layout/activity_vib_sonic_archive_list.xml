<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vib_sonic_archive_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/activity_vib_sonic_archive_list_header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_layout"
        android:background="@color/gray">

        <RelativeLayout
            android:id="@+id/activity_vib_sonic_archive_list_back_layout"
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_vib_sonic_archive_list_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/activity_vib_sonic_archive_list_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/activity_vib_sonic_archive_list_back_iv"
                android:text="@string/back"
                android:fontFamily="@font/handle_go"
                android:layout_marginStart="8dp"
                android:textColor="@color/header_backgrounds"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_vib_sonic_archive_list_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/archive"
            android:fontFamily="@font/handle_go"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <RelativeLayout
            android:id="@+id/activity_vib_sonic_archive_list_edit_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/activity_vib_sonic_archive_list_edit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/activity_vib_sonic_archive_list_edit_tv"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/activity_vib_sonic_archive_list_edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/edit"
                android:fontFamily="@font/handle_go"
                android:textColor="@color/header_backgrounds"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/activity_vib_sonic_archive_list_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_vib_sonic_archive_list_bottom_layout"
        android:layout_below="@+id/activity_vib_sonic_archive_list_header_layout"
        android:layout_marginStart="@dimen/layout_margin_10"
        android:divider="@color/MediumGray"
        android:dividerHeight="1dp" />

    <LinearLayout
        android:id="@+id/activity_vib_sonic_archive_list_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/activity_vib_sonic_archive_list_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/layout_margin_20"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/select_all"
            android:textColor="@color/grey_line"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/activity_vib_sonic_archive_list_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/layout_margin_20"
            android:layout_weight="1"
            android:text="@string/delete"
            android:textColor="@color/grey_line"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
</RelativeLayout>