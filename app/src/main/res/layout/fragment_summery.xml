<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.Fragments.SummeryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,1:0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8dp"
                android:background="@color/light_gray_silvers"
                app:layout_constraintDimensionRatio="h,1:0.6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/handle_go"
                    android:text="@string/time"
                    android:textColor="@color/header_backgrounds"
                    android:textSize="@dimen/text_size_15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/vibrationLineChart"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:padding="4dp"
                    app:layout_constraintDimensionRatio="h,1:0.4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDateTime" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@color/light_gray_silvers"
                app:layout_constraintDimensionRatio="h,1:0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/handle_go"
                    android:text="@string/mean_acceleration"
                    android:textColor="@color/header_backgrounds"
                    android:textSize="@dimen/text_size_15"
                    app:layout_constraintDimensionRatio="w,1:0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtZZ"
                    android:layout_width="95dp"
                    android:layout_height="81dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/z"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold"
                    app:layout_constraintDimensionRatio="1.2:1.0"
                    app:layout_constraintEnd_toStartOf="@+id/txtx"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/textView20"
                    app:layout_constraintTop_toBottomOf="@+id/textView20"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.5" />

                <TextView
                    android:id="@+id/txty"
                    android:layout_width="95dp"
                    android:layout_height="81dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/y"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtx"
                    app:layout_constraintDimensionRatio="1.2:1.0"
                    app:layout_constraintEnd_toEndOf="@+id/textView20"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txtx"
                    app:layout_constraintTop_toTopOf="@+id/txtx"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.5" />

                <TextView
                    android:id="@+id/txtx"
                    android:layout_width="95dp"
                    android:layout_height="81dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/x"
                    android:elevation="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtZZ"
                    app:layout_constraintDimensionRatio="1.2:1.0"
                    app:layout_constraintEnd_toStartOf="@+id/txty"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txtZZ"
                    app:layout_constraintTop_toTopOf="@+id/txtZZ"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.5" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@color/light_gray_silvers"
                app:layout_constraintDimensionRatio="h,1:0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint1">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/handle_go"
                    android:text="@string/peak_frequency"
                    android:textColor="@color/header_backgrounds"
                    android:textSize="@dimen/text_size_15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtfrZ"
                    android:layout_width="95dp"
                    android:layout_height="81dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/z"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold"
                    app:layout_constraintDimensionRatio="1.2:1.0"
                    app:layout_constraintEnd_toStartOf="@+id/txtfrx"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/textView21"
                    app:layout_constraintTop_toBottomOf="@+id/textView21"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.5" />

                <TextView
                    android:id="@+id/txtfrx"
                    android:layout_width="95dp"
                    android:layout_height="81dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/x"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtfrZ"
                    app:layout_constraintDimensionRatio="1.2:1.0"
                    app:layout_constraintEnd_toStartOf="@+id/txtfry"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txtfrZ"
                    app:layout_constraintTop_toTopOf="@+id/txtfrZ"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.5" />

                <TextView
                    android:id="@+id/txtfry"
                    android:layout_width="95dp"
                    android:layout_height="81dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/y"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtfrx"
                    app:layout_constraintDimensionRatio="1.2:1.0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txtfrx"
                    app:layout_constraintTop_toTopOf="@+id/txtfrx"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.5" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--added for ampltitude-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@color/light_gray_silvers"
                app:layout_constraintDimensionRatio="h,1:0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

                <TextView
                    android:id="@+id/peakfreqTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/handle_go"
                    android:text="Amplitude:"
                    android:textColor="@color/header_backgrounds"
                    android:textSize="@dimen/text_size_15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtampZ"
                    android:layout_width="95dp"
                    android:layout_height="81dp"
                    android:background="@drawable/z"
                    android:elevation="8dp"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1.2:1.0"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintStart_toStartOf="@+id/peakfreqTv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.5" />

                <TextView
                    android:id="@+id/txtampx"
                    android:layout_width="95dp"
                    android:layout_height="81dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/x"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtampZ"
                    app:layout_constraintDimensionRatio="1.2:1.0"
                    app:layout_constraintEnd_toStartOf="@+id/txtampy"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txtampZ"
                    app:layout_constraintTop_toTopOf="@+id/txtampZ"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.5" />

                <TextView
                    android:id="@+id/txtampy"
                    android:layout_width="95dp"
                    android:layout_height="81dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/y"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtampx"
                    app:layout_constraintDimensionRatio="1.2:1.0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txtampx"
                    app:layout_constraintTop_toTopOf="@+id/txtampx"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.5" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--end-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="w,1:0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
                app:layout_constraintVertical_bias="0.5">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_save"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_margin_45"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="@dimen/layout_margin_3"
                    android:layout_marginBottom="4dp"
                    android:background="@color/header_backgrounds"
                    android:text="@string/archive"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="w,1:0"
                    app:layout_constraintEnd_toStartOf="@+id/bt_share"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/bt_share"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_margin_45"
                    android:layout_marginStart="@dimen/layout_margin_3"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_comm"
                    android:text="@string/share"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="w,1:0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/bt_save" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/layout_margin_30"
                    android:src="@drawable/baseline_turn_right_24"
                    app:layout_constraintBottom_toBottomOf="@+id/bt_share"
                    app:layout_constraintEnd_toEndOf="@+id/bt_share"
                    app:layout_constraintTop_toTopOf="@+id/bt_share" />
            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>