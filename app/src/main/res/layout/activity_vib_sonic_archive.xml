<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vib_sonic_archive_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_vib_sonic_archive_header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_layout"
        android:background="@color/gray">

        <RelativeLayout
            android:id="@+id/activity_vib_sonic_archive_back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_vib_sonic_archive_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/layout_margin_8"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/activity_vib_sonic_archive_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/activity_vib_sonic_archive_back_iv"
                android:fontFamily="@font/handle_go"
                android:text="@string/back"
                android:textColor="@color/header_backgrounds"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_vib_sonic_archive_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/handle_go"
            android:text="@string/archive"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />

        <RelativeLayout
            android:id="@+id/activity_vib_sonic_archive_more_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">

            <!-- Horizontal LinearLayout for TextView and Arrow Image -->
            <LinearLayout
                android:id="@+id/info_layouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/activity_vib_sonic_archive_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/info"
                    android:fontFamily="@font/handle_go"
                    android:textColor="@color/header_backgrounds"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:id="@+id/image_vib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/baseline_arrow_forward_24" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/activity_vib_sonic_archive_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/layout_margin_15"
        android:layout_below="@+id/activity_vib_sonic_archive_header_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/activity_vib_sonic_dba_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_5"
                android:layout_marginTop="@dimen/layout_margin_5"
                android:text="dB(A)"
                android:textColor="@color/header_backgrounds"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold" />
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/activity_vib_sonic_archieve_soundGraph"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginTop="@dimen/layout_margin_20" />

            <WebView
                android:id="@+id/activity_vib_sonic_archive_wv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/activity_vib_sonic_archieve_soundGraph" />
        </RelativeLayout>
    </ScrollView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal"
      android:layout_marginStart="@dimen/layout_margin_10"
      android:layout_marginEnd="@dimen/layout_margin_10"
      android:layout_marginTop="@dimen/text_size_15"
      android:layout_marginBottom="@dimen/layout_margin_2">
      <Button
          android:id="@+id/bt_save"
          android:layout_width="0dp"
          android:layout_height="@dimen/edittext_height_mesh"
          android:layout_weight="1"
          android:elevation="8dp"
          android:gravity="center_horizontal|center_vertical"
          android:background="@color/header_backgrounds"
          android:text="@string/archive"
          android:layout_marginStart="@dimen/layout_margin_5"
          android:textSize="@dimen/text_size_15"
          android:textColor="@color/white" />
      <Button
          android:id="@+id/bt_share"
          android:layout_width="0dp"
          android:layout_height="@dimen/edittext_height_mesh"
          android:layout_weight="1"
          android:elevation="8dp"
          android:textSize="@dimen/text_size_15"
          android:gravity="center_horizontal|center_vertical"
          android:background="@drawable/bt_comm"
          android:text="@string/share"
          android:drawableEnd="@drawable/baseline_turn_right_24"
          android:layout_marginStart="@dimen/layout_margin_5"
          android:layout_marginEnd="@dimen/layout_margin_5"
          android:textColor="@color/white"
          />
  </LinearLayout>
</RelativeLayout>