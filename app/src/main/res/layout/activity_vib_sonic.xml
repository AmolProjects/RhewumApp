<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vib_sonic_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black0"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_vib_sonic_header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_layout"
        android:background="@color/gray">

        <RelativeLayout
            android:id="@+id/activity_vib_sonic_back_layouts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_vib_sonic_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/activity_vib_sonic_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/handle_go"
                android:textSize="@dimen/text_size_15"
                android:layout_toEndOf="@+id/activity_vib_sonic_back_iv"
                android:text="@string/back"
                android:layout_marginStart="8dp"
                android:textColor="@color/header_backgrounds"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_vib_sonic_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/handle_go"
            android:text="@string/vib_sonic"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />

        <RelativeLayout
            android:id="@+id/activity_vib_sonic_archive_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">

            <!-- Horizontal LinearLayout for TextView and Arrow Image -->
            <LinearLayout
                android:id="@+id/info_layouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/activity_vib_sonic_archive_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/info"
                    android:fontFamily="@font/handle_go"
                    android:textColor="@color/header_backgrounds"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:id="@+id/image_vib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="1dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/baseline_arrow_forward_24" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/activity_vib_sonic_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/graphLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_vib_sonic_dba_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/layout_margin_5"
                    android:text="dB(A)"
                    android:textColor="@color/header_backgrounds"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_12" />
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/activity_vib_sonic_soundGraph"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_marginTop="@dimen/layout_margin_20" />
            </RelativeLayout>

            <TextView
                android:id="@+id/activity_vib_sonic_dbaValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/graphLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_margin_8"
                android:text="@string/mean_level_0_00_db_a"
                android:textColor="@color/grey_background"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

   <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/gray">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/gray">

            <TextView
                android:id="@+id/activity_vib_sonic_horizontalline_tv1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/layout_margin_10"
                android:layout_marginTop="@dimen/layout_margin_15"
                android:layout_marginRight="@dimen/layout_margin_10"
                android:background="@color/light_gray_silver" />

            <LinearLayout
                android:id="@+id/timerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:layout_below="@+id/activity_vib_sonic_horizontalline_tv1"
                android:layout_marginTop="@dimen/layout_margin_10">

                <TextView
                    android:id="@+id/activity_vib_sonic_time_elapsed_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_size_15"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/time_elapsed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />

                <Chronometer
                    android:id="@+id/chronometer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin_5"
                    android:layout_weight="1"
                    android:format="00:00:00"
                    android:text="@string/chronometer"
                    android:textColor="@color/header_backgrounds"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timerLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timerLayout"
                android:layout_marginStart="8dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_vib_sonic_mean_level_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_15"
                    android:text="@string/mean_level_total_0_0_db_a"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/text_size_15"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/activity_vib_sonic_mean_level_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin_5"
                    android:layout_weight="1"
                    android:text="@string/_0_0_db_a_s"
                    android:layout_marginTop="@dimen/layout_margin_15"
                    android:textColor="@color/header_backgrounds"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_strat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timerLayout1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/layout_margin_30"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_vib_reset"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_mesh"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/header_backgrounds"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15"
                    android:layout_marginBottom="@dimen/layout_margin_10"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/activity_vib_sonic_archive_tvs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height_mesh"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/vibsonic_draw"

                    android:elevation="8dp"
                    android:layout_marginTop="@dimen/layout_margin_8"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/archive"
                    android:textColor="@color/header_backgrounds"

                    android:textSize="@dimen/text_size_15"
                    android:layout_marginBottom="@dimen/layout_margin_10"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

        </RelativeLayout>
  <!--  </ScrollView>-->
</LinearLayout>