<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CapacityCheckerInfoActivity">
    <!-- AppBar layout for using Toolbar as AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/header_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_layout"
                android:background="@color/gray"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/handle_go"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/txtTitles"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintBottom_toBottomOf="@+id/txtBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/my_toolbar"
                app:layout_constraintTop_toTopOf="@+id/txtBack" />

            <TextView
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/handle_go"
                android:text="@string/back"
                android:textColor="@color/header_backgrounds"
                android:textSize="@dimen/text_size_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/back_button"
                app:layout_constraintTop_toTopOf="@+id/my_toolbar" />

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtBack"
                app:srcCompat="@drawable/baseline_arrow_back_24" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/handle_go"
            android:text="@string/bulk_density_reference_values"
            android:textColor="@color/header_backgrounds"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/capInfo"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintDimensionRatio="w,1:0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/txtMaterial"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@color/header_backgrounds"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtKgM3"
            app:layout_constraintDimensionRatio="w,1:0"
            app:layout_constraintEnd_toStartOf="@+id/txtKgM3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            tools:ignore="PrivateResource" />

        <TextView
            android:id="@+id/txtKgM3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/header_backgrounds"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"
            app:layout_constraintDimensionRatio="w,1:0"
            app:layout_constraintEnd_toStartOf="@+id/txtLbFt3"
            app:layout_constraintStart_toEndOf="@+id/txtMaterial"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/txtLbFt3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/header_backgrounds"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"
            app:layout_constraintDimensionRatio="w,1:0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtKgM3"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            tools:ignore="PrivateResource" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resCapacity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:paddingBottom="8dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:0"
            app:layout_constraintEnd_toEndOf="@+id/txtLbFt3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/txtMaterial"
            app:layout_constraintTop_toBottomOf="@+id/txtLbFt3"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/material"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            android:gravity="center_vertical|start"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtMaterial"
            app:layout_constraintDimensionRatio="w,1:0"
            app:layout_constraintStart_toEndOf="@+id/txtMaterial"
            app:layout_constraintStart_toStartOf="@+id/txtMaterial"
            app:layout_constraintTop_toTopOf="@+id/txtMaterial" />
        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/kg_m3"
            android:padding="2dp"
            android:gravity="center_vertical|start"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtKgM3"
            app:layout_constraintDimensionRatio="w,1:0"
            app:layout_constraintStart_toEndOf="@+id/txtKgM3"
            app:layout_constraintStart_toStartOf="@+id/txtKgM3"
            app:layout_constraintTop_toTopOf="@+id/txtKgM3" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            android:padding="2dp"
            android:textStyle="bold"
            android:text="@string/lb_ft3"
            android:gravity="center_vertical|start"
            app:layout_constraintBottom_toBottomOf="@+id/txtLbFt3"
            app:layout_constraintDimensionRatio="w,1:0"
            app:layout_constraintStart_toEndOf="@+id/txtLbFt3"
            app:layout_constraintStart_toStartOf="@+id/txtLbFt3"
            app:layout_constraintTop_toTopOf="@+id/txtLbFt3" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>